+/**
++ * This function will add dot & dotdot entries into ext4 directory.
++ * Add considering interoperability (between 1.8 & 2.0) requirement.
++ */
+int ext4_add_dot_dotdot(handle_t *handle, struct inode * dir,
+			 struct inode *inode)
+ {
+	struct buffer_head * dir_block;
+	struct ext4_dir_entry_2 * de;
+	int err = 0;
+
+	inode->i_op = &ldiskfs_dir_inode_operations;
+	inode->i_fop = &ldiskfs_dir_operations;
+	inode->i_size = LDISKFS_I(inode)->i_disksize = inode->i_sb->s_blocksize;
+	dir_block = ldiskfs_bread (handle, inode, 0, 1, &err);
+	if (!dir_block) {
+		clear_nlink(inode);
+		ext4_mark_inode_dirty(handle, inode);
+		iput (inode);
+		goto get_out;
+	}
+	BUFFER_TRACE(dir_block, "get_write_access");
+	ldiskfs_journal_get_write_access(handle, dir_block);
+	de = (struct ldiskfs_dir_entry_2 *) dir_block->b_data;
+	de->inode = cpu_to_le32(inode->i_ino);
+	de->name_len = 1;
+	de->rec_len = ldiskfs_rec_len_to_disk(LDISKFS_DIR_REC_LEN(de->name_len));
+	strcpy (de->name, ".");
+	ldiskfs_set_de_type(dir->i_sb, de, S_IFDIR);
+	de = ldiskfs_next_entry(de);
+	de->inode = cpu_to_le32(dir->i_ino);
+	de->rec_len = ldiskfs_rec_len_to_disk(inode->i_sb->s_blocksize -
+					      LDISKFS_DIR_REC_LEN(1));
+	de->name_len = 2;
+	strcpy (de->name, "..");
+	ldiskfs_set_de_type(dir->i_sb, de, S_IFDIR);
+	inode->i_nlink = 2;
+	BUFFER_TRACE(dir_block, "call ldiskfs_journal_dirty_metadata");
+	ldiskfs_journal_dirty_metadata(handle, dir_block);
+	brelse (dir_block);
+	ldiskfs_mark_inode_dirty(handle, inode);
+get_out:
+	return err;
+}
+EXPORT_SYMBOL(ext4_add_dot_dotdot);
