+                iam_leaf_unlock(leaf);
+                assert_inv(ergo(leaf->il_bh != NULL, iam_leaf_check(leaf)));
+                iam_leaf_ops(leaf)->fini(leaf);
+                if (leaf->il_bh) {
+                        brelse(leaf->il_bh);
+                        leaf->il_bh = NULL;
+                        leaf->il_curidx = 0;
+                }
+        }
