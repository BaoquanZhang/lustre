+static int iam_lfix_init(struct iam_leaf *l)
+{
+        int result;
+        struct iam_leaf_head *ill;
+        int count;
+
+        assert_corr(l->il_bh != NULL);
+
+        ill = iam_get_head(l);
+        count = le16_to_cpu(ill->ill_count);
+        if (ill->ill_magic == le16_to_cpu(IAM_LEAF_HEADER_MAGIC) &&
