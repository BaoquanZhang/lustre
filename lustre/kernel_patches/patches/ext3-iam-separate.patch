+        __u32 hash0;
+        __u32 hash1;
+
+        assert_corr(ent_is_live(e0));
+        assert_corr(ent_is_live(e1));
+
+        hash0 = gethash(folio, e0);
+        hash1 = gethash(folio, e1);
+        if (hash0 < hash1)
+                return -1;
+        else if (hash0 > hash1)
+                return +1;
+        else if (e0 < e1)
+                return -1;
+        else if (e0 > e1)
